<link href="/stylesheets/style.css" rel="stylesheet">

<%- include Layout/header.ejs %>
<div class="container">
        <% for(var i=0; i<games.length; i++) { %>
                <div class="wrapper-card">
                        <img src="<%=games[i].image%>" alt='imagen' class="image-card" />
                        <h1 class="title">
                                <%=games[i].title%>
                        </h1>
                        <div class="section-recomendation">
                                <i class="fas fa-heart icon-heart" title="Recomendaciones"></i>
                                <span class="span-recomendacion" title="Recomendaciones">
                                        <%=games[i].recommends%>
                                </span>
                        </div>
                        <p class="description">
                                <%=games[i].description%>
                        </p>
                </div>
                <% } %>
</div>